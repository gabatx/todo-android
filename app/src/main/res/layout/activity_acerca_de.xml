<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AcercaDeActivity"
        android:background="@color/holder">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarAcercaDe"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:backgroundTint="#00FFFFFF"
            app:titleTextColor="@color/white"
            android:layout_marginTop="32dp"
            android:background="?attr/colorPrimary"
            android:theme="@style/ToolbarTheme"
            android:minHeight="?attr/actionBarSize"
            app:titleMargin="0dp"
            app:titleMarginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart2"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd2">

        <TextView
                android:text="Acerca de"
                android:textSize="25dp"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="end"
                android:layout_marginEnd="25dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelineStart2"
            app:layout_constraintGuide_begin="20dp"
            android:orientation="vertical" />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidelineEnd2"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp" />

    <TextView
            android:text="Javier Cuadros Pozo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd2"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/blanco_palido"
            android:textSize="16sp"
            app:layout_constraintVertical_bias="0.3" />

    <TextView
            android:text="Estudiante en escuela Estech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd2"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart2"
            android:textColor="@color/blanco_palido"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

    <TextView
            android:text="Datos de contacto:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd2"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart2"
            android:textColor="@color/blanco_palido"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:textSize="16sp"
            android:layout_marginTop="10dp" />

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icono_web"
            android:id="@+id/icono_web"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart2"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd2"
            android:layout_marginTop="45dp" />

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icono_email"
            android:id="@+id/icono_email"
            app:layout_constraintTop_toBottomOf="@+id/icono_web"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd2"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart2"
            android:layout_marginTop="32dp" />

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icono_google_play"
            android:id="@+id/icono_play"
            app:layout_constraintTop_toBottomOf="@+id/icono_email"
            app:layout_constraintEnd_toStartOf="@+id/guidelineEnd2"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart2"
            android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>